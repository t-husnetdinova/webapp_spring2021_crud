<h2 class="center">Subscriber Table</h2>
<table class="table">
    <thread>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thread>
    <tbody>
        <% subscribers.forEach(subscriber => { %>
            <tr>
                <td>
                    <a href="<%= `/subscribers/$subscriber._id` %>">
                        <%= subscriber.name %>
                    </a>
                </td>
                <td>
                    <%= subscriber.email %>
                </td>
                <td>
                    <%= subscriber.zipCode %>
                </td>
                <td>
                    <a href="<%= `/subscribers/${subscriber._id}/edit` %>">
                        Edit
                    </a>
                </td>
                <td>
                    <a href="<%= `/subscribers/${subscriber._id}delete?_method=DELETE` %>" onClick="return confirm('Are you sure?')">
                        Delete
                    </a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>